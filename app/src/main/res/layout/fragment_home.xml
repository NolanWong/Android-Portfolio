<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.home.HomeFragment">

    <!-- ScrollView is important so the form doesn't
         get cut off on smaller screens -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- THIS IS THE STYLED FORM CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_background"
            android:orientation="vertical"
            android:padding="20dp">
            <!-- The android:background attribute applies our new shape -->

            <TextView
                android:id="@+id/textView_header"
                android:fontFamily="times new roman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Bio"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#1F2937"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView_bio"
                android:layout_width="match_parent"
                android:fontFamily="times new roman"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="I am Nolan wong, a student interested in Computer Engineering. I like plastic model kits and cooking."
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#1F2937"
                android:textSize="16sp" />

            <!--            add two images-->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
